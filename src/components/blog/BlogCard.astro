---
interface Props {
  title: string;
  description: string;
  publishDate: Date;
  author: string;
  slug: string;
  image?: string;
  categories: string[];
}

const { title, description, publishDate, author, slug, image, categories } = Astro.props;
---

<article class="bg-white rounded-lg shadow-md overflow-hidden">
  {image && (
    <img
      src={image}
      alt={title}
      class="w-full h-48 object-cover"
    />
  )}
  <div class="p-6">
    <p class="text-gray-500 text-sm mb-2">{publishDate.toLocaleDateString()}</p>
    <h2 class="text-2xl font-semibold mb-2">
      <a href={`/blog/${slug}`} class="hover:text-purple-600">
        {title}
      </a>
    </h2>
    <p class="text-gray-600 mb-4">{description}</p>
    <div class="flex items-center justify-between">
      <span class="text-gray-600">{author}</span>
      <div class="flex gap-2">
        {categories.map(category => (
          <span class="bg-gray-100 text-gray-700 px-2 py-1 rounded-full text-sm">
            {category}
          </span>
        ))}
      </div>
    </div>
  </div>
</article>